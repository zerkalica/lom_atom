{
  "name": "lom_atom",
  "version": "1.0.7",
  "description": "Observable state management",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "config": {
    "dest": "."
  },
  "jsnext:main": "dist/lom_atom.es.js",
  "module": "dist/lom_atom.es.js",
  "main": "dist/lom_atom.js",
  "umd:main": "dist/lom_atom.umd.js",
  "scripts": {
    "release": "npm test && npm run build && standard-version && git push --follow-tags origin master && npm publish",
    "build": "rimraf dist && rollup -c",
    "test": "flow check && mocha",
    "test.dev": "mocha --growl --watch",
    "watch": "chokidar --initial -d 2000 -t 1000 'src/**/*.js' -c 'npm run build && cp -rvf *.js src dist $npm_package_config_dest/node_modules/lom_atom'"
  },
  "author": "Stefan Zerkalica <zerkalica@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/zerkalica/lom_atom.git"
  },
  "keywords": [
    "state",
    "mobx",
    "observable",
    "reactive",
    "model",
    "frp",
    "functional-reactive-programming",
    "state management",
    "data flow",
    "react"
  ],
  "files": [
    "*.map",
    "*.js",
    "*.flow",
    ".flowconfig",
    "README.md",
    "LICENSE",
    "src",
    "flow-typed",
    "dist"
  ],
  "devDependencies": {
    "babel-plugin-external-helpers": "^7.0.0-alpha.17",
    "babel-plugin-transform-class-properties": "^7.0.0-alpha.17",
    "babel-plugin-transform-decorators": "^7.0.0-alpha.17",
    "babel-preset-es2015": "^7.0.0-alpha.17",
    "babel-preset-flow": "^7.0.0-alpha.17",
    "babel-register": "^7.0.0-alpha.17",
    "babelrc-rollup": "^3.0.0",
    "chokidar-cli": "^1.2.0",
    "flow-bin": "^0.52.0",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.47.4",
    "rollup-plugin-babel": "=3.0.0-alpha.17",
    "rollup-plugin-uglify": "^2.0.1",
    "standard-version": "^4.2.0",
    "uglify-es": "^3.0.27"
  }
}
