{
  "name": "lom_atom",
  "version": "1.0.0",
  "description": "Observable state management",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "config": {
    "dest": "."
  },
  "scripts": {
    "prepublish": "npm run build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepush": "npm test",
    "update": "ncu -ua && npm install",
    "clean": "rm -rf dist",
    "build": "npm run clean && BABEL_ENV=rollup rollup -c",
    "check": "flow check",
    "testonly": "BABEL_ENV=commonjs mocha",
    "test": "flow check && BABEL_ENV=commonjs mocha",
    "test.dev": "BABEL_ENV=commonjs mocha --growl --watch",
    "build.babel": "babel examples/app/src --out-dir dist/examples",
    "watch": "chokidar --initial -d 2000 -t 1000 'src/**/*.js' -c 'npm run build && cp -rvf *.js src dist $npm_package_config_dest/node_modules/lom_atom'"
  },
  "author": "Stefan Zerkalica <zerkalica@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/zerkalica/lom_atom.git"
  },
  "keywords": [
    "state",
    "functional",
    "immutable",
    "hot",
    "live",
    "replay",
    "flux",
    "elm"
  ],
  "files": [
    "*.map",
    "*.js",
    "*.flow",
    ".flowconfig",
    "README.md",
    "LICENSE",
    "src",
    "flow-typed",
    "dist"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-espower": "^2.3.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "flow-bin": "^0.49.1",
    "husky": "^0.14.3",
    "mocha": "^3.4.2",
    "power-assert": "^1.4.4",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "sinon": "^2.3.6"
  }
}
